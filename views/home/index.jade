extends ../layout

block content
  .parallax-window(data-parallax='scroll', data-image-src='/images/alexa.jpg', style='margin-top: -20px; margin-bottom: -20px')
    .container
      .row
        .col-sm-12
          h1.text-center(style='color: #eee; font-size: 60px; margin-top: 80px')
            | Control Indigo from Alexa

      .row
        .col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3
          .image-center.text-center(style='margin-top: 90px')
            img.img-responsive(src='/images/alexa-to-indigo.png')

      .row.mt-70.mb-70
        p.text-center
          a.btn.btn-success.btn-lg(href='/users/login') Get Started
          a.btn.btn-default.btn-lg.ml-20(href='/learn-more') Learn More